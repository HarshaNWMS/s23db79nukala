extends layout
block content
 h1= title
 - let items = results;
 - let destination = `dispatch("/tiger/create")`
   button.btn( class="btn-primary ml-1", onclick= destination) Create tiger
   each item in items
    - let destination1 = `dispatch("/tiger/update?id=${item._id}")`
    - let destination2 = `dispatch("/tiger/detail?id=${item._id}")`
    - let destination3 = `dispatch("/tiger/delete?id=${item._id}")`
      div
       p tigerName  - #{item.tigerName}
       p tigerCost  - #{item.tigerCost}
       p Description - #{item.Description}
       button.btn( class="btn-primary ml-1", onclick= destination1) Update
       button.btn( class="btn-primary ml-1", onclick= destination2) Detail
       button.btn( class="btn-primary ml-1", onclick= destination3) Delete
       br
       br
 script.
  function dispatch(path){
   window.location.href=path
  }